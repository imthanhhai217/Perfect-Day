<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:background="@drawable/bg_frag_home"
    android:padding="@dimen/_5sdp"
    tools:context=".fragment.WindFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/midLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"></androidx.constraintlayout.widget.Guideline>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/border"
            app:layout_constraintBottom_toBottomOf="@id/row2"
            app:layout_constraintStart_toStartOf="@id/midLine"
            app:layout_constraintTop_toTopOf="@id/row1"></View>

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Chi tiết"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toTopOf="@id/row1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDetails"></View>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_5sdp"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25"></androidx.constraintlayout.widget.Guideline>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"></androidx.constraintlayout.widget.Guideline>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75"></androidx.constraintlayout.widget.Guideline>


            <TextView
                android:id="@+id/tt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tốc độ gió"
                android:textColor="@color/textColor"
                app:layout_constraintEnd_toStartOf="@id/h1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 km/h"
                android:textColor="@color/textColor"
                app:layout_constraintEnd_toStartOf="@id/h1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tt1"></TextView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/icon_windy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/h2"
                app:layout_constraintStart_toStartOf="@id/h1"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:id="@+id/tt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cảm thấy"
                android:textColor="@color/textColor"
                app:layout_constraintEnd_toStartOf="@id/h3"
                app:layout_constraintStart_toEndOf="@id/h2"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/tvFeelsLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15"
                android:textColor="@color/textColor"
                app:layout_constraintEnd_toStartOf="@id/h3"
                app:layout_constraintStart_toEndOf="@id/h2"
                app:layout_constraintTop_toBottomOf="@id/tt2"></TextView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/icon_temperature"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/h3"
                app:layout_constraintTop_toTopOf="parent">
                >
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row1"></View>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_5sdp"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row1">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25"></androidx.constraintlayout.widget.Guideline>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h22"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"></androidx.constraintlayout.widget.Guideline>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h32"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75"></androidx.constraintlayout.widget.Guideline>


            <TextView
                android:id="@+id/tt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Độ ẩm"
                android:textColor="@color/textColor"
                app:layout_constraintEnd_toStartOf="@id/h12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/tvHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/textColor"
                app:layout_constraintEnd_toStartOf="@id/h12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tt3"></TextView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/icon_humidity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/h22"
                app:layout_constraintStart_toStartOf="@id/h12"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:id="@+id/tt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Áp suất"
                android:textColor="@color/textColor"
                app:layout_constraintEnd_toStartOf="@id/h32"
                app:layout_constraintStart_toEndOf="@id/h22"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/tvPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15"
                android:textColor="@color/textColor"
                app:layout_constraintEnd_toStartOf="@id/h32"
                app:layout_constraintStart_toEndOf="@id/h22"
                app:layout_constraintTop_toBottomOf="@id/tt4"></TextView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/icon_pressure"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/h32"
                app:layout_constraintTop_toTopOf="parent">
                >
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>